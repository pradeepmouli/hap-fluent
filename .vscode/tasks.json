{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build all packages",
			"type": "shell",
			"command": "pnpm run build",
			"group": "build",
			"problemMatcher": [
				"$tsc"
			]
		},
		{
			"label": "Test all packages",
			"type": "shell",
			"command": "pnpm run test",
			"group": "test",
			"problemMatcher": []
		},
		{
			"label": "Lint all packages",
			"type": "shell",
			"command": "pnpm run lint",
			"group": "test",
			"problemMatcher": [
				"$eslint-stylish"
			]
		},
		{
			"label": "Format all packages",
			"type": "shell",
			"command": "pnpm run format",
			"group": "none",
			"problemMatcher": []
		},
		{
			"label": "Type check all packages",
			"type": "shell",
			"command": "pnpm run type-check",
			"group": "none",
			"problemMatcher": [
				"$tsc"
			]
		}
	]
}