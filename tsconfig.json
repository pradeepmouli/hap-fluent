{
	"compilerOptions": {
		"target": "ES2022",
		"module": "node18",
		"moduleResolution": "node16",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"allowJs": false,
		"sourceMap": true,
		"strict": true,
		"noEmit": false,
		"baseUrl": ".",
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"declaration": true,
		"declarationMap": true,
		"composite": true,
		"incremental": true
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"dist",
		"build",
		"coverage"
	]
}