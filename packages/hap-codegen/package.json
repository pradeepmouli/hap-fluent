{
  "name": "hap-codegen",
  "version": "0.1.0",
  "private": true,
  "description": "Code generation for HAP-NodeJS service and characteristic TypeScript interfaces.",
  "license": "Apache-2.0",
  "type": "module",
  "main": "dist/generate-hap-interfaces.js",
  "module": "dist/generate-hap-interfaces.js",
  "types": "dist/generate-hap-interfaces.d.ts",
  "scripts": {
    "build": "tsgo",
    "download": "tsx src/download-hap-definitions.ts",
    "generate": "tsx src/generate-hap-interfaces.ts",
    "type-check": "tsgo --noEmit",
    "clean": "rm -rf dist tsconfig.tsbuildinfo"
  },
  "dependencies": {
    "camelcase": "^8.0.0",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "ts-morph": "^27.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
