		"homebridge": "^1.11.0",
		"ts-node": "^10.9.2",
		"type-fest": "^4.41.0",
		"typescript": "^5.9.3",
		"vitest": "^3.0.0"
	},
	"dependencies": {
		"camelcase": "^8.0.0"
	}
