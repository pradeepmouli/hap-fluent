{
  "name": "@company/ts-template",
  "version": "1.0.0",
  "description": "TypeScript monorepo for HAP-Fluent - Type-safe wrapper for Homebridge HAP-NodeJS",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "pnpm -r run build",
    "test": "pnpm -r run test",
    "lint": "oxlint .",
    "lint:fix": "oxlint --fix .",
    "format": "oxfmt .",
    "format:check": "oxfmt --check .",
    "type-check": "pnpm -r run type-check",
    "clean": "pnpm -r run clean",
    "dev": "pnpm -r --parallel run dev"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "@vitest/ui": "^3.0.0",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.6",
    "oxfmt": "^0.16.0",
    "oxlint": "^0.15.6",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "type-fest": "^4.41.0",
    "typescript": "^5.9.3",
    "vitest": "^3.0.0"
  },
  "pnpm": {
    "overrides": {
      "glob": "^11.0.0"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "oxlint --fix",
      "oxfmt"
    ],
    "*.{json,md,yml,yaml}": [
      "oxfmt"
    ]
  },
  "dependencies": {
    "homebridge-lib": "^7.1.9"
  }
}