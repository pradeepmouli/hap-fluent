{
  "name": "@company/ts-template",
  "version": "1.0.0",
  "description": "TypeScript monorepo for HAP-Fluent - Type-safe wrapper for Homebridge HAP-NodeJS",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "pnpm@10.6.2",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "pnpm -r run build",
    "test": "pnpm -r run test",
    "lint": "oxlint .",
    "lint:eslint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "oxfmt",
    "format:prettier": "prettier --write .",
    "format:check": "oxfmt --check",
    "type-check": "pnpm -r run type-check",
    "clean": "pnpm -r run clean",
    "dev": "pnpm -r --parallel run dev",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "pnpm run build && changeset publish",
    "prepare": "simple-git-hooks"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@typescript/native-preview": "7.0.0-dev.20251225.1",
    "@vitest/ui": "^3.0.0",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.6",
    "oxfmt": "^0.20.0",
    "oxlint": "^1.35.0",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "type-fest": "^4.41.0",
    "typescript": "^5.9.3",
    "vitest": "^3.0.0",
    "simple-git-hooks": "^2.13.1"
  },
  "pnpm": {
    "overrides": {
      "glob": "^11.0.0"
    }
  },
  "dependencies": {
    "homebridge-lib": "^7.1.9"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "pre-push": "pnpm run type-check"
  }
}